@model IEnumerable<WebApplication1.Models.Mensaje>

@{
    ViewBag.Title = "Zm";
}

	
<section>


	<div class="container">

		<div class="row">

			<div class="col-md-3">
				<ul class="nav nav-pills nav-stacked">
					<li class="active"><a data-toggle="pill" href="#home">Home</a></li>
					<li><a data-toggle="pill" href="#menu1">Chat</a></li>

				</ul>
			</div>
			<div class="col-md-7">
				<div class="tab-content">
					<div id="home" class="tab-pane fade in active">

						<h3>HOME</h3>

						<div class="panel-body" >
							<p>
								@Html.ActionLink("Crear nuevos mensaje", "Create")
							</p>
							<p>
								@Html.ActionLink("Crear Nuevo usuario", "Create","Usuarios")


							</p>
						</div>

					</div>
					<div id="menu1" class="tab-pane fade">
						<div class="well">
							<div style="overflow-y:scroll;height:340px;" >
								@foreach (var item in Model)
								{
									<div class="panel panel-primary">
										<div class="panel-heading">
											@Html.DisplayFor(modelItem => item.titulo)
										</div>
										<div class="panel-body">
											@Html.DisplayFor(modelItem => item.mensaje1)

										</div>
										<div class="panel-footer">

											@Html.ActionLink("Details", "Details", new { id = item.id_mensaje })
											//@Html.DisplayFor(modelItem => item.Usuario.nombre) //
											@Html.DisplayFor(modelItem => item.fecha)

										</div>
									</div>
								}
							</div>
						</div>
						
						
					</div>
					</div>
				</div>
			</div>
			</div>				

</section>






	