@model WebApplication1.Models.Mensaje

@{
    ViewBag.Title = "Create";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()



	<div class="panel panel-warning">
		<div class="panel-heading"><h2>Crear  mensaje</h2></div>



		<div class="panel-body">
			<div class="form-horizontal">
				<h4>Mensaje</h4>
				<hr />
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				<div class="form-group">
					@Html.LabelFor(model => model.fecha, htmlAttributes: new { @class = "control-label col-md-2" })
					<div class="col-md-10">
						@Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(model => model.fecha,"", new { @class = "text-danger" })
					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(model => model.titulo, htmlAttributes: new { @class = "control-label col-md-2" })
					<div class="col-md-10">
						@Html.EditorFor(model => model.titulo, new { htmlAttributes = new { @class = "form-control" ,@value =DateTime.Today} })
						@Html.ValidationMessageFor(model => model.titulo, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(model => model.mensaje1,"Mensaje", htmlAttributes: new { @class = "control-label col-md-2" })
					<div class="col-md-10">
						@Html.EditorFor(model => model.mensaje1, new { htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(model => model.mensaje1, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(model => model.id_usuario, "Usuario", htmlAttributes: new { @class = "control-label col-md-2" })
					<div class="col-md-10">
						@Html.DropDownList("id_usuario", null, htmlAttributes: new { @class = "form-control" })
						@Html.ValidationMessageFor(model => model.id_usuario, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="form-group" style="visibility:hidden">
					@Html.LabelFor(model => model.id_ctx, "id_ctx", htmlAttributes: new { @class = "control-label col-md-2" })
					<div class="col-md-10">
						@Html.DropDownList("id_ctx", null, htmlAttributes: new { @class = "form-control" })
						@Html.ValidationMessageFor(model => model.id_ctx, "", new { @class = "text-danger" })
					</div>
				</div>

				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<input type="submit" value="Crear mensaje" class="btn btn-default" />
					</div>
				</div>

			</div>
		</div>

		<div class="panel-footer">
		
			<div>
				@Html.ActionLink("Back to List", "Index")
			</div>

		</div>

	</div>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
